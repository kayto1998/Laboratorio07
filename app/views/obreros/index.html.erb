<body class="is-preload">

	<div id="header">

		<div class="top">
			<div id="logo">
				<h1 id="title">Implementaci√≥n</h1>
				<p>HTML5,CSS3,JQUERY y BOOTSTRAP</p>
			</div>

			<nav id="nav">
				<ul>
					<li><a href="#top" id="top-link"><span class="icon solid fa-home">Users</span></a></li>
          <li><a href="#top" id="top-link"><span class="icon solid fa-home">Obreros</span></a></li>
				</ul>
			</nav>

		</div>

	</div>

	<div id="main">

		<section id="top" class="one dark cover">
			<div class="container">

				<div class="row">
					<div class="col-lg-12 mx-md-auto">
						<h1>Users</h1>

						<%= link_to 'New User' , new_user_path, class: "btn btn-primary btn-lg mb-4" , data: {
							bs_toggle: 'modal' , bs_target: '#newUserModal' , remote: true } %>

							<table class="table table-bordered">
								<thead>
									<tr>
										<th>Id</th>
										<th>Name</th>
										<th>Password</th>
										<th>Rol</th>
									</tr>
								</thead>

								<tbody id="usersTable">
									<% @users.each do |user| %>
										<%= render 'user_row' , user: user %>
											<% end %>
								</tbody>
							</table>
					</div>
				</div>
			</div>
			<div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="newUserModalLabel">Create New User</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div id="newUserForm">
						</div>
					</div>
				</div>
			</div>

			<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel"
				aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div id="editUserForm">
						</div>
					</div>
				</div>
			</div>

			<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel"
				aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="showUserModalLabel">User Details</h5>
							<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
						</div>
						<div id="showUserDetails">
						</div>
					</div>
				</div>
			</div>
		</section>
    <section id="top2" class="one dark cover">
      <div class="container">

        <div class="row">
          <div class="col-lg-12 mx-md-auto">
            <h1>Obreros</h1>

            <%= link_to 'New User' , new_user_path, class: "btn btn-primary btn-lg mb-4" , data: {
              bs_toggle: 'modal' , bs_target: '#newUserModal' , remote: true } %>

              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Password</th>
                    <th>Rol</th>
                  </tr>
                </thead>

                <tbody id="usersTable">
                  <% @users.each do |user| %>
                    <%= render 'user_row' , user: user %>
                      <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
      <div class="modal fade" id="newUserModal" tabindex="-1" aria-labelledby="newUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="newUserModalLabel">Create New User</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="newUserForm">
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="editUserModalLabel">Edit User</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editUserForm">
            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="showUserModalLabel">User Details</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="showUserDetails">
            </div>
          </div>
        </div>
      </div>
    </section>

	</div>

	<div >
		<% if @user %>
