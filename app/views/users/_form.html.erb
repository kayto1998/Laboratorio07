<%= form_with(model: user, local: false) do |form| %>
  <div class="modal-body">
    <div id="errorArea"></div>

    <div class="form-group mt-3">
      <%= form.label :username %>
      <%= form.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :password_digest %>
      <%= form.text_field :password_digest, class: 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= form.label :rol %>
      <%= form.text_field :rol, class: 'form-control' %>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>
    <%= form.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
